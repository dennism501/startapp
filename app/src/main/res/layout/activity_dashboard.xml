<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dashboard">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeToRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="29dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="67.3dp"
                        android:layout_height="67.3dp"
                        android:background="@drawable/money" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="26dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:text="Total Income"
                            android:textColor="#222"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/nunito_regular"
                            android:text="K0"
                            android:textColor="#393939"
                            android:textSize="20sp" />
                    </LinearLayout>


                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FF9800"
                        android:fontFamily="@font/nunito_black"
                        android:gravity="center"
                        android:padding="13dp"
                        android:id="@+id/budget_dashboard"
                        android:text="Menu"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                </android.support.v7.widget.CardView>


                <GridLayout
                    android:id="@+id/mainGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:columnOrderPreserved="false"
                    android:padding="14dp"
                    android:rowCount="2">


                    <android.support.v7.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="22.7dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="50.7dp"
                                android:layout_gravity="center"
                                android:layout_margin="7dp"
                                android:fontFamily="@font/nunito_regular"
                                android:text="Total Costs"
                                android:textColor="#222"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center"
                                android:text="K0"
                                android:textColor="#555"
                                android:textSize="20sp" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="22.7dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="50.7dp"
                                android:layout_gravity="center"
                                android:layout_margin="7dp"
                                android:fontFamily="@font/nunito_regular"
                                android:text="Gross Income"
                                android:textColor="#222"
                                android:textSize="25dp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center"
                                android:text="K0"
                                android:textColor="#555"
                                android:textSize="20sp" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="22.7dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout

                            android:layout_width="180dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:id="@+id/clientadd"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/image3"
                                android:layout_width="match_parent"
                                android:layout_height="50.7dp"
                                android:layout_gravity="center"
                                android:scaleType="fitCenter"
                                android:src="@drawable/add1" />

                            <TextView
                                android:id="@+id/title3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center"
                                android:text="Add Client"
                                android:textColor="#484646"
                                android:textSize="15sp" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="22.7dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:id="@+id/linear"
                            android:layout_width="180dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="22.7dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/image4"
                                android:layout_width="match_parent"
                                android:layout_height="50.7dp"
                                android:layout_gravity="center"
                                android:src="@drawable/budget" />

                            <TextView
                                android:id="@+id/title4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center"
                                android:text="Create Budget"
                                android:textColor="#484646"
                                android:textSize="12.7sp" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                </GridLayout>

            </LinearLayout>

            <Button
                android:id="@+id/transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="13.3dp"
                android:layout_marginRight="13.3dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/background_rect"
                android:fontFamily="@font/nunito_regular"
                android:text="Transactions"
                android:textColor="#FFFFFF" />


        </RelativeLayout>

    </android.support.v4.widget.SwipeRefreshLayout>


</android.support.constraint.ConstraintLayout>